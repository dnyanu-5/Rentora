<% layout("/layouts/boilerplate") -%>

    <body>
        <div class="row mt-3">
            <div class="col-6 offset-3"></div>
            <h4>Edit Your Listings</h4>
            <form action="/listings/<%= lists._id %>?_method=PUT" method="POST" novalidate class="needs-validation"
                enctype="multipart/form-data">

                <input type="hidden" name="listings[img][url]" value="<%= lists.img.url %>">
                <input type="hidden" name="listings[img][filename]" value="<%= lists.img.filename || 'listingimage' %>">

                <div class="mb-3">
                    <label for="title" class="form-label">Title</label>
                    <input type="text" name="title" value="<%= lists.title %>" class="form-control" required>
                    <div class="valid-feedback">
                        Title is valid!.
                    </div>
                    <div class="invalid-feedback">
                        Please select a valid title.
                    </div>
                </div>

                <div class="mb-3">
                    <label for="description" class="form-label">Description</label>
                    <textarea name="description" rows="2" cols="10" class="form-control"
                        required><%= lists.description %></textarea>
                    <div class="invalid-feedback">
                        Please select a valid description.
                    </div>
                </div>

                <div class="row">
                    <div class="mb-3 col-md-4">
                        <label for="price" class="form-label">Price</label>
                        <input name="price" value="<%= lists.price %>" class="form-control" required>
                        <div class="invalid-feedback">
                            Please select a valid price.
                        </div>
                    </div>

                    <div class="mb-3 col-md-8">
                        <label for="country" class="form-label">Country</label>
                        <input type="text" name="country" value="<%= lists.country %>" class="form-control" required>
                        <div class="invalid-feedback">
                            Please select a valid country.
                        </div>
                    </div>

                </div>

                <div class="mb-3">
                        <label>Original Image:</label><br>
                        <img src="<%= originalImageUrl %>" style="height: 200px; width: 200px;" />
                    </div>

                </div>

                <div class="mb-3">
                    <label for="img" class="form-label">Upload new Image</label>
                    <input type="file" name="image" class="form-control" placeholder="upload new image">
                </div>

                <div class="mb-2">
                    <label for="location" class="form-label">Location</label>
                    <input type="text" name="location" value="<%= lists.location %>" class="form-control" required>
                    <div class="invalid-feedback">
                        Please select a valid location.
                    </div>
                </div>

                <button class="btn btn-dark add-btn mt-2 mb-3">Save Changes</button>
            </form>
            <br>
        </div>
        </div>
    </body>