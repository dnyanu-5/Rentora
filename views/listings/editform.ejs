<% layout("/layouts/boilerplate") -%>

    <body>
        <div class="row mt-3">
            <div class="col-8 offset-2"></div>
            <h4>Edit Listings</h4>
            <form action="/listings/<%= lists._id %>?_method=PUT" method="POST" novalidate class="needs-validation">

                <input type="hidden" name="listings[img][url]" value="<%= lists.img.url %>">
                <input type="hidden" name="listings[img][filename]" value="<%= lists.img.filename || 'listingimage' %>">


                <div class="mb-3">
                    <label for="title" class="form-label">Title</label>
                    <input type="text" name="title" value="<%= lists.title %>" class="form-control" required>
                    <div class="valid-feedback">
                        Title is valid!.
                    </div>
                    <div class="invalid-feedback">
                        Please select a valid title.
                    </div>
                </div>

                <div class="mb-3">
                    <label for="description" class="form-label">Description</label>
                    <textarea name="description" rows="2" cols="10" class="form-control"
                        required><%= lists.description %></textarea>
                    <div class="invalid-feedback">
                        Please select a valid description.
                    </div>
                </div>

                <div class="row">
                    <div class="mb-3 col-md-4">
                        <label for="price" class="form-label">Price</label>
                        <input name="price" value="<%= lists.price %>" class="form-control" required>
                        <div class="invalid-feedback">
                            Please select a valid price.
                        </div>
                    </div>

                    <div class="mb-3 col-md-8">
                        <label for="country" class="form-label">Country</label>
                        <input type="text" name="country" value="<%= lists.country %>" class="form-control"
                            required>
                        <div class="invalid-feedback">
                            Please select a valid country.
                        </div>
                    </div>

                </div>

                <!-- <div class="mb-3">
                    <label for="img" class="form-label">Image</label>
                    <input type="text" name="img" value="<%= lists.img.url %>" class="form-control" required>
                    <div class="invalid-feedback">
                            Please select a valid image.
                        </div>
                </div> -->

                <div class="mb-3">
                    <label for="img" class="form-label">Image (optional)</label>
                    <input type="text" name="listings[img][url]" class="form-control"
                        placeholder="Enter new image URL to change">
                    <div class="invalid-feedback">
                        Please provide a valid image URL.
                    </div>
                </div>

                <div class="mb-3">
                    <label for="location" class="form-label">Location</label>
                    <input type="text" name="location" value="<%= lists.location %>" class="form-control"
                        required>
                    <div class="invalid-feedback">
                        Please select a valid location.
                    </div>
                </div>

                <button class="btn btn-dark add-btn mt-3">Save Changes</button>
            </form>
            <br>
        </div>
        </div>
    </body>