<!-- individual places -->
<% layout("/layouts/boilerplate") -%>

    <body>
        <div class="row mt-3">
            <div class="col-8 offset-3">
                <h3>
                    <%= lists.title %>
                </h3>
            </div>
            <div class="card col-6 offset-3 show-card list-card">
                <img src="<%= lists.img.url%>" class="card-img-top show-img" alt="listing-image">
                <div class="card-body">
                    <p class="card-title"><i>
                            owned by <%= lists.owner.username %></i>
                    </p>
                    <!-- <b> <%= lists.title %></b> <br> -->
                    <p class="card-title">
                        <%=lists.description %>
                    </p>
                    <p class="card-title">&#8377 <%= (lists.price||0).toLocaleString("en-IN") %>
                    </p>
                    <p class="card-title">
                        <%=lists.location %>
                    </p>
                    <p class="card-title">
                        <%=lists.country %>
                    </p>
                </div>
            </div>

            <% if (currUser && String(currUser._id)===String(lists.owner._id)) { %>
                <div class="btns">
                    <a href="/listings/<%= lists._id %>/edit" class="btn btn-dark col-1 offset-3 add-btn">Edit</a>
                    <form action="/listings/<%= lists._id %>?_method=DELETE" method="post">
                        <button class="btn btn-dark offset-3"> Delete</button>
                    </form>
                </div>
                <%}%>     
        </div>

        <div class="col-8 offset-3">
            <hr />
            <h4>Leave a review</h4>
            <% if(currUser){%>
                <form action="/listings/<%= lists._id %>/reviews" method="POST" novalidate class="needs-validation">
                    <div class="mb-3 mt-3">
                        <label for="rating" class="form-label">Rating</label>
                        <input type="range" min="1" max="5" id="rating" name="reviews[rating]" class="form-range"
                            required>
                    </div>
                    <div class="mb-3 mt-3">
                        <label for="comment" class="form-label">Comment</label>
                        <textarea name="reviews[comment]" id="comment" rows="3" cols="30" class="form-control"
                            required></textarea>
                        <div class="invalid-feedback">
                            Please add some comments for review..
                        </div>
                    </div>
                    <button class="btn btn-outline-dark">Submit</button>
                </form>
                <hr />
                <%}%>

                <p><b>All Reviews</b></p>
                    <div class="row">
                        <% for (let review of lists.reviews) { %>
                            <div class="card col-5 ms-3 mb-3">
                                <div class="card-body">
                                    <h6 class="card-title">@<%= review.author.username %></h6>
                                    <p class="card-text">
                                        <%= review.comment %>
                                    </p>
                                    <p class="card-text">
                                        <%= review.rating%> stars
                                    </p>
                                </div>
                                <form action="/listings/<%= lists._id %>/reviews/<%= review._id %>?_method=DELETE"
                                    method="POST" class="mb-2">
                                    <button class="btn btn-sm btn-dark">Delete</button>
                                </form>
                            </div>
                            <% } %>
                    </div>
        </div>
        </div>
    </body>