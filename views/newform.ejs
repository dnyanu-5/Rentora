<% layout("/layouts/boilerplate") -%>

    <body>
        <div class="row mt-3">
            <div class="col-8 offset-2">
                <h4>Create New Listings</h4>
                <form action="/listings" method="POST" novalidate class="needs-validation" enctype="multipart/form-data">

                    <div class="mb-3">
                        <label for="title" class="form-label">Title</label>
                        <input type="text" name="listings[title]" placeholder="Add catchy title" required class="form-control">
                        <div class="valid-feedback">
                            Title is valid!.
                        </div>
                        <div class="invalid-feedback">
                            Please select a valid title.
                        </div>
                    </div>

                    <div class="mb-3">
                        <label for="description" class="form-label">Description</label>
                        <textarea name="listings[description]" placeholder="Enter description" rows="2" cols="10" required
                            class="form-control"></textarea>
                        <div class="invalid-feedback">
                            Please select a valid description.
                        </div>
                    </div>

                    <div class="row">
                        <div class="mb-3 col-md-4">
                            <label for="price" class="form-label">Price</label>
                            <input name="listings[price]" placeholder="0000" required class="form-control">
                            <div class="invalid-feedback">
                                Please select a valid price.
                            </div>
                        </div>

                        <div class="mb-3 col-md-8">
                            <label for="country" class="form-label">Country</label>
                            <input type="text" name="listings[country]" placeholder="Enter country" required
                                class="form-control">
                            <div class="invalid-feedback">
                                Please select a valid country.
                            </div>
                        </div>
                    </div>

                    <!-- <div class="mb-3">
                        <label for="img" class="form-label">Image</label>
                        <input type="text" name="listings[img]" placeholder="Enter image URL/link" class="form-control">
                    </div> -->

                    <div class="mb-3">
                        <label for="img" class="form-label">Upload Image</label>
                        <input type="file" name="image" placeholder="Upload image URL/link" class="form-control" required>
                    </div>

                    <div class="mb-3">
                        <label for="location" class="form-label">Location</label>
                        <input type="text" name="listings[location]" placeholder="Enter location" required
                            class="form-control">
                        <div class="invalid-feedback">
                            Please select a valid location.
                        </div>
                    </div>

                    <button class="btn btn-dark add-btn mt-3">Add</button>
                    <br>
                </form>
                <br>
            </div>
        </div>
    </body>